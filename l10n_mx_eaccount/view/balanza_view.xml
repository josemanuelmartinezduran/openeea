						</group>
						<notebook>
							<page string="">
								<field name="">
									<tree string="X" editable="bottom">
										<field name="" />
									</tree>
								</field>
							</page>							
						</notebook>			
					</sheet>
					<div class="oe_chatter">
							<field name="message_follower_ids" widget="mail_followers" />
							<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>
		
		<!--  Lista   Balanza -->
