		<field name="inherit_id" ref="project_issue.project_issue_form_view"/>
		<field name="arch" type="xml">
			<data>
				<xpath expr="//label[2]" position="before">
					<label for="etapa" string="Etapa" />
					<field name="etapa" />
				</xpath>
			</data>
		</field>
	</record>	
		
