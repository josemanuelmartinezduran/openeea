<?xml version="1.0" encoding="utf-8"?>
<openerp>

    <data>
	
        <!-- Vista tree para auditoria-->
        <record model='ir.ui.view' id='auditoria_view_tree'>
            <field name='name'>view.auditoria_view_tree</field>
            <field name='model'>auditoria</field>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree string='Auditoria'>
					<field name='name'/>
					<field name="gastos_supervision" />
					<field name='inicio'/>
					<field name='fin'/>
                </tree>
            </field>
        </record>
		
		<!-- Vista form para auditoria-->
        <record model='ir.ui.view' id='auditoria_view_form'>
            <field name='name'>view.auditoria_view_form</field>
            <field name='model'>auditoria</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string='Auditoria' version="7.0">
					<header>
                	<button string="Iniciar Ejecución" type="workflow" states="planeacion" name="signal_ejecutar"/>
                	<button string="Cerrar" type="workflow" states="ejecucion" name="signal_cerrar" confirm="Se cerrará la auditoría" />	
                	<field name="state" widget="statusbar" nolabel="1" />
					 </header>
					<sheet>
						<h1>
					   	<field name='name' placeholder='Nombre de la Auditoría'/>
						</h1>																
						<group>
							<group>
								<field name='auditores' string='Auditores' widget="many2many_tags"/>
								<field name='tipo_auditoria'/>
								<field name="proyecto" domain="[('etapa', '=' ,'proyecto')]" attrs="{'invisible': [('tipo_auditoria', '!=', 'campo')]}"/>
								<field name="nombre_corto" readonly="True" />
							</group>
							<group>
								<field name='inicio'/>
								<field name='fin'/>
								<field name="gastos_supervision" />
							</group>
						</group>																
									<notebook>
										<page string='Planeacion'>
											<tree>
												<field name='planeacion'>
													<tree string="Planeacion" editable="bottom">
														<field name="fecha" />
														<field name="auditor" />
														<field name="sujeto" />
														<field name="checklist" />
													</tree>
												</field>
											</tree>
										</page>
										<page string="Objetivo">
											<field name='objetivo'/>
										</page>
										<page string="Alcance">
											<field name="alcance" />
										</page>
										<page string="Resultados">
											<field name="resultado_ids" />
											<button name="generate_rac" string="Generar RAC" type="object"/>
										</page>						
									</notebook>
					</sheet>
											<div class="oe_chatter">
							<field name="message_follower_ids" widget="mail_followers" />
							<field name="message_ids" widget="mail_thread" />
						</div>
                </form>
            </field>
        </record>
		
		<!-- action para auditoria -->
        <record id="auditoria_action_fve" model="ir.actions.act_window">
            <field name="name">Auditoría</field>
            <field name="res_model">auditoria</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar,gantt</field>
        </record>
        
		<!-- Vista Gantt -->		
		<record model='ir.ui.view' id='auditoria_gantt'>
            <field name='name'>auditoria.gantt</field>
            <field name='model'>auditoria</field>
            <field name='type'>gantt</field>
            <field name='arch' type='xml'>
					<gantt string="Auditoria" date_start="inicio" date_stop="fin" color="tipo_auditoria">
						<level object="auditoria" link="id" domain="[]">
							<field name="name"/>
						</level>
					</gantt>
				</field>
		</record>
		
		
        <!-- Vista tree para auditoria planeacion-->
        <record model='ir.ui.view' id='auditoria_planeacion_view_tree'>
            <field name='name'>view.auditoria_planeacion_view_tree</field>
            <field name='model'>auditoria.planeacion</field>
			<field name='priority' eval='14'/>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree string='Planeacion'>
					<field name='fecha'/>
					<field name='auditor' string='Auditor'/>
					<field name='sujeto' string='Sujeto'/>
					<field name='checklist' string='Checklist'/>
                </tree>
            </field>
        </record>
		
        <!-- Vista tree2 para auditoria planeacion-->
        <record model='ir.ui.view' id='auditoria_planeacion_view_tree2'>
            <field name='name'>view.auditoria_planeacion_view_tree2</field>
            <field name='model'>auditoria.planeacion</field>
			<field name='priority' eval='15'/>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree string='Resultado'>
					<field name='fecha'/>
					<field name='auditor' string='Auditor'/>
					<field name='sujeto' string='Sujeto'/>
					<field name='checklist' string='Checklist'/>
					<field name='aprobado'/>
					<field name='observaciones'/>
                </tree>
            </field>
        </record>		

        <!-- Vista form para auditoria planeacion-->
        <record model='ir.ui.view' id='auditoria_planeacion_view_form'>
            <field name='name'>view.auditoria_planeacion_view_form</field>
            <field name='model'>auditoria.planeacion</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string='Planeacion'>
					<group>
						<field name='fecha'/>
						<field name='auditor' string='Auditor'/>
						<field name='sujeto' string='Sujeto'/>
						<field name='checklist' string='Checklist'/>
					</group>
                </form>
            </field>
        </record>




		
		

		
		
        <!-- Vista tree para auditoria checklist-->
        <record model='ir.ui.view' id='auditoria_checklist_view_tree'>
            <field name='name'>view.auditoria_checklist_view_tree</field>
            <field name='model'>auditoria.checklist</field>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree string='Checklist'>
					<field name='name'/>
					<field name='preguntas'/>
                </tree>
            </field>
        </record>		
		
        <!-- Vista form para auditoria checklist-->
        <record model='ir.ui.view' id='auditoria_checklist_view_form'>
            <field name='name'>view.auditoria_checklist_view_form</field>
            <field name='model'>auditoria.checklist</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string='Checklist' version='7.0'>
                <header>
                	<button string="Aprobar" type="workflow" states="borrador" name="signal_aprobar" confirm="¿Esta seguro?" />	
                	<field name="state" widget="statusbar" nolabel="1" />
					 </header>
					 
					<sheet>
						<h1>
							<field name="name" placeholder="Nombre de la Auditoría" required="True" />
						</h1>
						<group>
							<group>
								<field name="creador" />
							</group>
							<group>
								<field name="fecha" />
							</group>
						</group>
						<notebook>
							<page string='Preguntas'>
								<field name='preguntas'>
									<tree string="Preguntas" editable="bottom">
										<field name="numero" />
										<field name="pregunta" />
										<field name="tipo_respuesta" />
										<field name="valor_referencia" />
									</tree>
								</field>
							</page>
						</notebook>
					</sheet>
                </form>
            </field>
        </record>			


		<!-- action para auditoria -->
        <record id="auditoria_checklist_action_fve" model="ir.actions.act_window">
            <field name="name">Checklist de Auditoría</field>
            <field name="res_model">auditoria.checklist</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>


		
		
		
		
		
		
		
		<!-- Vista tree para auditoria preguntas -->
        <record model='ir.ui.view' id='auditoria_preguntas_view_tree'>
            <field name='name'>view.auditoria_preguntas_view_tree</field>
            <field name='model'>auditoria.checklist_preguntas</field>
            <field name='type'>tree</field>
            <field name='arch' type='xml'>
                <tree string='Checklist'>
					<field name='pregunta'/>
					<field name='tipo_respuesta'/>
					<field name='valor_referencia'/>
                </tree>
            </field>
        </record>	
		
		<!-- Vista form para auditoria preguntas -->
        <record model='ir.ui.view' id='auditoria_preguntas_view_form'>
            <field name='name'>view.auditoria_preguntas_view_form</field>
            <field name='model'>auditoria.checklist_preguntas</field>
            <field name='type'>form</field>
            <field name='arch' type='xml'>
                <form string='Checklist' version='7.0'>
					<sheet>
						<group>
							<field name='pregunta'/>
							<field name='tipo_respuesta'/>
							<field name='valor_referencia'/>
						</group>
					</sheet>
                </form>
            </field>
        </record>			
		
		<!-- Auditoría -->
		<menuitem id="menu_auditoria" parent="base.menu_purchase_root" name="Auditoría" action="" groups="group_auditor,group_auditado" sequence="1" />
		
		<!-- Checklist -->
		<menuitem id="sb_checklist" parent="menu_auditoria" name="Checklist" action="auditoria_checklist_action_fve" groups="group_auditor" sequence="4" />
		<!-- RAC -->
		<menuitem id="sb_rac" parent="menu_auditoria" name="RAC" action="" groups="group_auditor,group_auditado" sequence="2" />
		<!-- No Conformidad -->
		<menuitem id="sb_nc" parent="menu_auditoria" name="No Conformidad" action="" groups="group_auditor,group_auditado" sequence="3" />
		<!-- Auditoría -->
		<menuitem id="sb_auditoria" parent="menu_auditoria" name="Auditoría" action="auditoria_action_fve" groups="group_auditor,group_auditado" sequence="1" />
		
		<!-- Auditoría -->
		<menuitem id="menu_auditoria2" parent="base.menu_purchase_root" name="Supervisión Externa" action="" groups="group_auditor,group_auditado" sequence="1" />
		
		<!-- Checklist -->
		<menuitem id="sb_checklist2" parent="menu_auditoria2" name="Checklist" action="auditoria_checklist_action_fve" groups="group_auditor" sequence="4" />
		<!-- RAC -->
		<menuitem id="sb_rac2" parent="menu_auditoria2" name="RAC" action="" groups="group_auditor,group_auditado" sequence="2" />
		<!-- No Conformidad -->
		<menuitem id="sb_nc2" parent="menu_auditoria2" name="No Conformidad" action="" groups="group_auditor,group_auditado" sequence="3" />
		<!-- Auditoría -->
		<menuitem id="sb_auditoria2" parent="menu_auditoria2" name="Auditoría" action="auditoria_action_fve" groups="group_auditor,group_auditado" sequence="1" />

		<!--  Calendario  Auditoria -->
		<record model="ir.ui.view" id="audit_cal">
			<field name="name">audit.cal</field>
			<field name="model">auditoria</field>
			<field name="type">calendar</field>
			<field name="priority" eval="16"/>
			<field name="arch" type="xml">
				<calendar string="Calendario de Auditoría" date_start="inicio" date_stop="fin" color="state">
					<field name="name"/>
				</calendar>	
			</field>
		</record>
		
	</data>
	
</openerp>
